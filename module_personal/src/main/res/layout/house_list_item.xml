<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:ignore="ResourceName">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="@dimen/public_10_0dp"
            android:paddingRight="@dimen/public_10_0dp"
            android:paddingTop="@dimen/public_5_0dp"
            android:paddingBottom="@dimen/public_5_0dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/hotel_photo"
                android:layout_width="96dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@mipmap/collection1"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp">

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="桂林象山景区江景房"
                    android:textColor="#000000"
                    android:textSize="8pt"/>

            <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="象山区民主路1号"/>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租金："/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#fc5e03"/>

                <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1780"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/public_money_color"/>

            </LinearLayout>


            <TextView
                    android:id="@+id/house_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="民宿/1室0厅1卫/M²"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/public_button_common_selector"
                    android:text="编辑"
                    android:textColor="@color/public_white"
                    android:layout_marginTop="@dimen/public_10_0dp"
                    android:layout_marginBottom="@dimen/public_10_0dp"/>


            <Button
                    android:id="@+id/status_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/public_button_common_selector"
                    android:text="下架"
                    android:textColor="@color/public_white"
                    android:layout_marginBottom="@dimen/public_10_0dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_1_0dp"
            android:background="@color/gray"></View>

</LinearLayout>