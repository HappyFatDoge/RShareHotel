<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:joker="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:ignore="ResourceName">

    <com.example.commonres.view.CommonToolBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_45_0dp"
            joker:title="@string/join_failed_title"
            joker:backVisible="true">
    </com.example.commonres.view.CommonToolBar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="39dp"
                  android:text="@string/please_check"
                  android:textColor="@color/public_text_color"
                  android:textSize="18sp"
                  android:textStyle="bold" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="27dp"
                  android:text="@string/check_first"
                  android:textColor="@color/public_text_color"
                  android:textSize="16sp" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/check_second"
                  android:textColor="@color/public_text_color"
                  android:textSize="16sp" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/check_third"
                  android:textColor="@color/public_text_color"
                  android:textSize="16sp" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/check_fourth"
                  android:textColor="@color/public_text_color"
                  android:textSize="16sp" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/check_fifth"
                  android:textColor="@color/public_text_color"
                  android:textSize="16sp" />


        <Button android:id="@+id/btnAgain"
                android:background="@drawable/public_button_common_selector"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="@string/config_again"
                android:textColor="@color/public_white"/>
    </LinearLayout>

</LinearLayout>