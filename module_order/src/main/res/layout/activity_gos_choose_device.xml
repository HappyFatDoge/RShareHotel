<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:joker="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:ignore="ResourceName">

    <com.example.commonres.view.CommonToolBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_45_0dp"
            joker:title="@string/choosedevice"
            joker:backVisible="true">
    </com.example.commonres.view.CommonToolBar>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="36dp"
            android:text="@string/itemtext_start"
            android:textColor="@color/public_text_state"
            android:textSize="15sp" />

    <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"></ListView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:gravity="center">

        <TextView
                android:id="@+id/nodevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nodevice"
                android:textColor="@color/public_colorAccent"
                android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>