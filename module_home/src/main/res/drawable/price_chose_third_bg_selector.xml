<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="ResourceName">

    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- 填充的颜色 -->
            <solid android:color="@color/public_price_selected"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:topRightRadius="10dp"
                     android:bottomRightRadius="@dimen/public_10_0dp"/>
            <stroke android:color="@color/public_price_selected"
                    android:width="2dp"/>

        </shape>
    </item>

    <item android:state_selected="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- 填充的颜色 -->
            <solid android:color="@color/public_price_selected"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:topRightRadius="10dp"
                     android:bottomRightRadius="@dimen/public_10_0dp"/>
            <stroke android:color="@color/public_price_selected"
                    android:width="2dp"/>

        </shape>
    </item>

    <item android:state_checked="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- 填充的颜色 -->
            <solid android:color="@color/public_price_selected"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:topRightRadius="10dp"
                     android:bottomRightRadius="@dimen/public_10_0dp"/>
            <stroke android:color="@color/public_price_selected"
                    android:width="2dp"/>

        </shape>
    </item>

    <item android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- 填充的颜色 -->
            <solid android:color="@color/public_price_unselected"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:topRightRadius="10dp"
                     android:bottomRightRadius="@dimen/public_10_0dp"/>
            <stroke android:color="@color/public_price_selected"
                    android:width="2dp"/>

        </shape>
    </item>

</selector>