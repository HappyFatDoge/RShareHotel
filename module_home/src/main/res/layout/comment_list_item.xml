<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/public_20_0dp"
        android:paddingRight="@dimen/public_20_0dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_comment_user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/login_head"/>

        <TextView
            android:id="@+id/tv_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_20_0dp"
            android:text="用户138****6741"
            android:textColor="#4b4849"
            android:textSize="8pt"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/public_10_0dp"
        android:paddingLeft="@dimen/public_20_0dp"
        android:paddingRight="@dimen/public_20_0dp"
        android:text="2018-05-04"/>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/public_20_0dp"
        android:paddingRight="@dimen/public_20_0dp"
        android:maxEms="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="环境好，住的很舒服，交通还很方便，靠近地铁站 "
        android:textColor="#FF4B4849"
        android:textSize="8pt"/>

    <View
        android:layout_marginTop="@dimen/public_10_0dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_1_0dp"
        android:background="@color/public_gray"></View>
</LinearLayout>