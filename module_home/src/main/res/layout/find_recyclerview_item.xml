<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="111dp"
              android:orientation="vertical"
              tools:ignore="ResourceName">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="@dimen/public_10_0dp"
            android:paddingRight="@dimen/public_10_0dp"
            android:paddingTop="@dimen/public_5_0dp"
            android:paddingBottom="@dimen/public_5_0dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_find_hotel"
                android:layout_width="96dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@mipmap/collection1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="6dp"
                    android:text="桂林象山景区江景房"
                    android:textColor="#000000"
                    android:textSize="8pt"/>

            <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="象山区民主路1号"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_find_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:text="公寓"
                        android:textColor="#097bd9"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_find_housetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1室0厅1卫"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>

                <TextView
                        android:id="@+id/tv_find_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M²"/>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="#fc5e03"/>

                    <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1780"
                            android:textColor="@color/public_money_color"
                            android:textSize="8pt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/日"
                        android:textColor="@color/public_money_color"
                        android:textSize="8pt"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_1_0dp"
            android:background="@color/gray"></View>


</LinearLayout>
